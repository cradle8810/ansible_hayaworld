{
"Dhcp6": {
  "interfaces-config": {
    "interfaces": ["{{ dhcp_info.interface }}"]
  },
  "lease-database": {
    "type": "memfile",
    "persist": true,
    "name": "{{ dhcp_info.ipv6.lease_db }}",
    "lfc-interval": 1800
  },
  "expired-leases-processing": {
    "reclaim-timer-wait-time": 10,
    "flush-reclaimed-timer-wait-time": 25,
    "hold-reclaimed-time": 3600,
    "max-reclaim-leases": 100,
    "max-reclaim-time": 250,
    "unwarned-reclaim-cycles": 5
  },

  "renew-timer": 1200,
  "rebind-timer": 2400,
  "valid-lifetime": 3600,

  "hooks-libraries": [
    {
      "library": "/usr/lib/x86_64-linux-gnu/kea/hooks/libdhcp_lease_cmds.so",
      "parameters": { }
    },
    {
      "library": "/usr/lib/x86_64-linux-gnu/kea/hooks/libdhcp_ha.so",
      "parameters": {
        "high-availability": [ {
          "this-server-name": "{{ dhcp_info.me.name }}",
          "mode": "hot-standby",
          "heartbeat-delay": 2000,
          "max-response-delay": 1000,
          "max-ack-delay": 3000,
          "max-unacked-clients": 0,
          "peers": 
            {{ dhcp_info.peer6 | to_nice_json }}
        }],
        "http-listener": {
          "ip-address": "{{ dhcp_info.me.ipaddr }}",
          "port": 8081,
          "urls": {
            "leases": "/leases",
            "commands": "/commands",
            "status": "/status"
          }
        }
      }
    }
  ],

  "reservation-mode": "disabled",
  "host-reservation-identifiers": [ "hw-address" ],

  "subnet6": [
    {
      "id": 1,
      "subnet": "{{ dhcp_info.ipv6.subnet }}",
      "option-data": {{ dhcp_info.ipv6.option_data | to_nice_json }}
    }
  ],

  "loggers": [
    {
        "name": "kea-dhcp6",
        "output_options": [
            {
                "output": "/var/log/kea/kea-dhcp6.log",
                "maxver": 8,
                "maxsize": 204800,
                "flush": true
            }
        ],
        "severity": "INFO",
        "debuglevel": 99
    }
  ]
}
}