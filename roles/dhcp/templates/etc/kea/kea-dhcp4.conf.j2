{
"Dhcp4": {
  "interfaces-config": {
    "interfaces": ["{{ dhcp_info.interface }}"],
    "dhcp-socket-type": "raw",
    "outbound-interface": "use-routing"
  },
  "lease-database": {
    "type": "memfile",
    "persist": true,
    "name": "{{ dhcp_info.ipv4.lease_db }}",
    "lfc-interval": 1800
  },
  "expired-leases-processing": {
    "reclaim-timer-wait-time": 10,
    "flush-reclaimed-timer-wait-time": 25,
    "hold-reclaimed-time": 3600,
    "max-reclaim-leases": 100,
    "max-reclaim-time": 250,
    "unwarned-reclaim-cycles": 5
  },

  "renew-timer": 1200,
  "rebind-timer": 2400,
  "valid-lifetime": 3600,

  "option-data": [
    {
        "name": "domain-name-servers",
        "data": "{{ dhcp_info.ipv4.dns }}"
    },
    {
        "name": "default-ip-ttl",
        "data": "{{ dhcp_info.ipv4.ttl }}"
    }
  ],

  "hooks-libraries": [
    {
      "library": "{{ dhcp.lib_base }}/libdhcp_lease_cmds.so",
      "parameters": { }
    },
    {
      "library": "{{ dhcp.lib_base }}/libdhcp_ha.so",
      "parameters": {
        "high-availability": [ {
          "this-server-name": "{{ dhcp_info.me.name }}",
          "mode": "hot-standby",
          "heartbeat-delay": 10000,
          "max-response-delay": 10000,
          "max-ack-delay": 5000,
          "max-unacked-clients": 5,
          "peers": 
            {{ dhcp_info.peer4 | to_nice_json }}
        }],
        "http-listener": {
          "ip-address": "{{ dhcp_info.me.ipaddr }}",
          "port": 8080,
          "urls": {
            "leases": "/leases",
            "commands": "/commands",
            "status": "/status"
          }
        }
      }
    }
  ],

  "reservation-mode": "disabled",
  "host-reservation-identifiers": [ "hw-address" ],

  "subnet4": [
    {
      "id": 1,
      "pools": [
          { "pool": "{{ dhcp_info.ipv4.pool }}" }
      ],
      "subnet": "{{ dhcp_info.ipv4.subnet }}",
      "option-data": [
          {
              "name": "routers",
              "data": "{{ dhcp_info.ipv4.gw }}"
          }
      ]
    }
  ],

  "loggers": [
    {
        "name": "kea-dhcp4",
        "output_options": [
            {
                "output": "/var/log/kea/kea-dhcp4.log",
                "maxver": 8,
                "maxsize": 204800,
                "flush": true
            }
        ],
        "severity": "INFO",
        "debuglevel": 99
    }
  ]
}
}