[Unit]
Description=Set CPU Speed as {{ pskylark_cpu_speed_khz }}kHz

[Service]
User=root
Type=oneshot
ExecStart=/bin/sh -c "echo {{ pskylark_cpu_speed_khz }} | tee /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq"
{% if pskylark_cpu_enable_core1 %}
ExecStart=/bin/sh -c "echo {{ pskylark_cpu_speed_khz }} | tee /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq"
{% endif %}

[Install]
WantedBy=multi-user.target
