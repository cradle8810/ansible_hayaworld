#!/bin/bash

echo $1

token="{{ all.vars.raindrop.key }}"
url="{{ all.vars.raindrop.add_url }}"

curl \
  --location "${url}" \
  --header 'Content-Type: application/json' \
  --header "Authorization: Bearer ${token}" \
  --data "{\"link\" : \"$1\"}" > /dev/null

if [ $? -ne 0 ]; then
  echo "Some error occured."
  exit 1
fi
